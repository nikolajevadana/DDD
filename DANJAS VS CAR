import pygame
import random
import sys

# Инициализация Pygame
pygame.init()

# Настройки экрана
WIDTH, HEIGHT = 800, 600
screen = pygame.display.set_mode((WIDTH, HEIGHT))
pygame.display.set_caption("CAR VS DANJAS")

# Цвета
WHITE = (255, 255, 255)
BLACK = (0, 0, 0)
BLONDE_YELLOW = (255, 255, 153)  # Светло-жёлтый (блондинка)
EGGPLANT = (75, 0, 130)          # Баклажан (машина)
GREEN = (34, 139, 34)            # Зелёный (обочина)
YELLOW = (255, 255, 0)           # Жёлтый (разметка)
SKY_BLUE = (25, 25, 112)         # Тёмно-синий (небо)
ROAD_GRAY = (50, 50, 50)         # Серый (дорога)
BUTTON_COLOR = (100, 100, 255)   # Цвет кнопок

# Шрифты
font_large = pygame.font.SysFont('Arial', 50)
font_medium = pygame.font.SysFont('Arial', 36)
font_small = pygame.font.SysFont('Arial', 24)

# Параметры игры
class GameSettings:
    def __init__(self):
        self.phase = 1
        self.phase_length = 2000  # Очков до следующей фазы
        self.car_speed = 7
        self.blonde_speed_min = 2
        self.blonde_speed_max = 5
        self.blonde_count = 8
        self.spawn_safe_zone = 150  # Зона безопасности вокруг машины
        
    def next_phase(self):
        self.phase += 1
        self.car_speed *= 1.05
        self.blonde_speed_min *= 1.05
        self.blonde_speed_max *= 1.05
        self.blonde_count = min(20, int(self.blonde_count * 1.05))
        self.spawn_safe_zone = max(50, self.spawn_safe_zone * 0.95)

# Машина (игрок)
class Car(pygame.sprite.Sprite):
    def __init__(self, settings):
        super().__init__()
        self.settings = settings
        self.image = pygame.Surface((60, 100))
        self.image.fill(EGGPLANT)
        self.rect = self.image.get_rect()
        self.rect.center = (WIDTH // 2, HEIGHT - 100)
        
    def update(self):
        keys = pygame.key.get_pressed()
        if keys[pygame.K_a] and self.rect.left > 100:
            self.rect.x -= self.settings.car_speed
        if keys[pygame.K_d] and self.rect.right < WIDTH - 100:
            self.rect.x += self.settings.car_speed

# Блондинка (враг)
class Blonde(pygame.sprite.Sprite):
    def __init__(self, settings, car_pos=None):
        super().__init__()
        self.settings = settings
        self.image = pygame.Surface((50, 50), pygame.SRCALPHA)
        pygame.draw.circle(self.image, BLONDE_YELLOW, (25, 25), 25)
        # Рисуем лицо (глаза, нос, рот)
        pygame.draw.rect(self.image, BLACK, (15, 15, 5, 5))
        pygame.draw.rect(self.image, BLACK, (30, 15, 5, 5))
        pygame.draw.rect(self.image, BLACK, (22, 22, 6, 6))
        for x, y in [(15, 35), (20, 38), (25, 39), (30, 38), (35, 35)]:
            pygame.draw.rect(self.image, BLACK, (x, y, 3, 3))
        
        self.rect = self.image.get_rect()
        self.speed = random.uniform(self.settings.blonde_speed_min, self.settings.blonde_speed_max)
        
        # Умный спавн с безопасной зоной
        if car_pos:
            while True:
                self.rect.x = random.randint(100, WIDTH - 150)
                # Проверяем, что блондинка не появляется прямо над машиной
                if abs(self.rect.centerx - car_pos) > self.settings.spawn_safe_zone:
                    break
        else:
            self.rect.x = random.randint(100, WIDTH - 150)
            
        self.rect.y = random.randint(-300, -100)

    def update(self):
        self.rect.y += self.speed
        if self.rect.top > HEIGHT:
            self.kill()

# Кнопка
class Button:
    def __init__(self, x, y, width, height, text):
        self.rect = pygame.Rect(x, y, width, height)
        self.text = text
        self.is_hovered = False

    def draw(self, surface):
        color = (150, 150, 255) if self.is_hovered else BUTTON_COLOR
        pygame.draw.rect(surface, color, self.rect, border_radius=10)
        pygame.draw.rect(surface, BLACK, self.rect, 2, border_radius=10)
        
        text_surf = font_medium.render(self.text, True, BLACK)
        text_rect = text_surf.get_rect(center=self.rect.center)
        surface.blit(text_surf, text_rect)

    def check_hover(self, pos):
        self.is_hovered = self.rect.collidepoint(pos)
        return self.is_hovered

# Функция для рисования дороги
def draw_road(settings):
    pygame.draw.rect(screen, SKY_BLUE, (0, 0, WIDTH, HEIGHT // 3))
    pygame.draw.rect(screen, GREEN, (0, HEIGHT // 3, 100, HEIGHT))
    pygame.draw.rect(screen, GREEN, (WIDTH - 100, HEIGHT // 3, 100, HEIGHT))
    pygame.draw.rect(screen, ROAD_GRAY, (100, HEIGHT // 3, WIDTH - 200, HEIGHT))
    for y in range(HEIGHT // 3, HEIGHT, 40):
        pygame.draw.rect(screen, YELLOW, (WIDTH // 2 - 5, y, 10, 20))

# Основная игра
def main_game():
    settings = GameSettings()
    all_sprites = pygame.sprite.Group()
    blondes = pygame.sprite.Group()
    car = Car(settings)
    all_sprites.add(car)

    score = 0
    clock = pygame.time.Clock()
    running = True

    while running:
        # Обработка событий
        for event in pygame.event.get():
            if event.type == pygame.QUIT:
                pygame.quit()
                sys.exit()

        # Проверка перехода на новую фазу
        if score // settings.phase_length > settings.phase - 1:
            settings.next_phase()
        
        # Спавн новых блондинок
        while len(blondes) < settings.blonde_count:
            new_blonde = Blonde(settings, car.rect.centerx)
            all_sprites.add(new_blonde)
            blondes.add(new_blonde)

        # Обновление
        all_sprites.update()

        # Проверка столкновений
        if pygame.sprite.spritecollide(car, blondes, False):
            return score

        score += 1

        # Отрисовка
        screen.fill(BLACK)
        draw_road(settings)
        all_sprites.draw(screen)
        
        # Интерфейс
        score_text = font_medium.render(f"SCORE: {score}", True, WHITE)
        screen.blit(score_text, (10, 10))
        
        phase_text = font_small.render(f"PHASE: {settings.phase}", True, WHITE)
        screen.blit(phase_text, (10, 50))

        pygame.display.flip()
        clock.tick(60)

# Меню
def show_menu():
    start_button = Button(WIDTH//2 - 100, HEIGHT//2 - 30, 200, 60, "START")
    exit_button = Button(WIDTH//2 - 100, HEIGHT//2 + 50, 200, 60, "EXIT")

    while True:
        mouse_pos = pygame.mouse.get_pos()
        
        for event in pygame.event.get():
            if event.type == pygame.QUIT:
                pygame.quit()
                sys.exit()
            
            if event.type == pygame.MOUSEBUTTONDOWN:
                if start_button.rect.collidepoint(event.pos):
                    return main_game()  # Запускаем игру
                elif exit_button.rect.collidepoint(event.pos):
                    pygame.quit()
                    sys.exit()

        screen.fill(SKY_BLUE)
        
        # Заголовок
        title = font_large.render("CARS VS DANJAS", True, WHITE)
        screen.blit(title, (WIDTH//2 - title.get_width()//2, 100))
        
        # Кнопки
        start_button.check_hover(mouse_pos)
        exit_button.check_hover(mouse_pos)
        start_button.draw(screen)
        exit_button.draw(screen)

        pygame.display.flip()

# Экран завершения игры
def show_game_over(score):
    restart_button = Button(WIDTH//2 - 100, HEIGHT//2, 200, 60, "PLAY AGAIN")
    exit_button = Button(WIDTH//2 - 100, HEIGHT//2 + 80, 200, 60, "EXIT")

    while True:
        mouse_pos = pygame.mouse.get_pos()
        
        for event in pygame.event.get():
            if event.type == pygame.QUIT:
                pygame.quit()
                sys.exit()
            
            if event.type == pygame.MOUSEBUTTONDOWN:
                if restart_button.rect.collidepoint(event.pos):
                    return True  # Перезапуск игры
                elif exit_button.rect.collidepoint(event.pos):
                    pygame.quit()
                    sys.exit()

        screen.fill(SKY_BLUE)
        
        # Текст "Игра окончена"
        game_over = font_large.render("U SUCK!", True, WHITE)
        screen.blit(game_over, (WIDTH//2 - game_over.get_width()//2, 100))
        
        # Счет
        score_text = font_medium.render(f"SCORE: {score}", True, WHITE)
        screen.blit(score_text, (WIDTH//2 - score_text.get_width()//2, 180))
        
        # Кнопки
        restart_button.check_hover(mouse_pos)
        exit_button.check_hover(mouse_pos)
        restart_button.draw(screen)
        exit_button.draw(screen)

        pygame.display.flip()

# Главный цикл программы
def main():
    while True:
        score = show_menu()
        if show_game_over(score):
            continue

if __name__ == "__main__":
    main()

